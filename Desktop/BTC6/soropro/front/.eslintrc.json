{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "mocha": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "indent": [
            "warn",
            2
        ],
        "no-console": 0,
        "no-unused-vars": [
            "warn"
        ],
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "double",
            "warn"
        ]
    }
}
